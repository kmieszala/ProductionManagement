{
  "Kestrel": {
    "EndPoints": {
      "Https": {
        "Url": "https://*:1122",
        "Certificate": {
          "Path": "",
          "Password": ""
        }
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ProductionManagement;Trusted_Connection=True;"
  },
  "AllowedHosts": "*",
  //INFO: zestaw konfiguracji dla logowania zdarzeñ
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System.Net.Http.HttpClient": "Information",
        "Microsoft.AspNetCore.Server.Kestrel": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/perfect_door/pd_.log",
          "rollingInterval": "Day"
        }
      },
      { "Name": "Console" }
    ]
  }
}

